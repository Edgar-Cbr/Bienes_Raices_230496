extends ../layout/index

block contenido
    div.py-10
        h1.text-center.font-extrabold.my-10.text-4xl.text-rojo-400 Bienes 
            span.font-normal.text-black Raíces
        h2.text-center.font-extrabold.text-2xl.text-black= page

    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
        div(class="p-6")
            p(class=error ? 'bg-rojo' : 'bg-naranja').py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white.uppercase= msg
        if !error
            div(class="p-6 mt-6")
                a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 uppercase block bg-naranja-100 h-10 py-2 px-6 rounded") Ya Puedes Iniciar Sesión
        else
            div(class="p-6 mt-6")
                a(href="/auth/login" class="text-center font-bold text-sm text-slate-600 uppercase block bg-naranja-800 text-blanco h-10 py-2 px-6 rounded") Oh NO!! Ocurrió algo, intenta de nuevo
